<div class="index-wrapper">
  <div class="index-container">
    <div class="left-column">
      <ul>
        <% @users.each do |user| %>
          <%= turbo_frame_tag user do %>
            <li><%= link_to user.login, user_path(user), data: {turbo_frame: "user-show"} %></li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div id="center-column" class="center-column">
      <%= turbo_frame_tag "user-show" do %>
      <% end %>
    </div>

    <div class="right-column">
      <%= turbo_frame_tag "user-edit" do %>
      <% end %>
    </div>
  </div>
</div>