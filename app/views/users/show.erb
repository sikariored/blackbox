<div class="user-show show-wrapper">
  <div class="show-container">
    <div class="show-item">
      <span><b>Login:</b> <%= current_user.login %></span>
    </div>

    <div class="show-item">
      <span><b>Email:</b> <%= current_user.email %></span>
    </div>

    <div class="show-item">
      <span><b>Роль:</b> <%= current_user.role.key %></span>
    </div>

    <div class="show-item">
      <span><b>Полномочия:</b>
        <% if current_user.credentials.any? %>
          <% current_user.credentials.each do |c| %>
              <div class="sub-item">
                <%= c.key %>
              </div>
          <% end %>
        <% else %>
          <span>Отсутствуют</span>
        <% end %>
      </span>
    </div>

    <div class="show-item">
      <span><b>Неудачных попыток входа:</b> <%= current_user.failed_attempts %></span>
    </div>

    <div class="show-item">
      <span>
        <b>Статус блокировки: </b>
        <% if current_user.locked_at? %>
          Заблокирован <%= current_user.locked_at %>
        <% else %>
          Не заблокирован
        <% end %>
      </span>
    </div>

    <div class="show-item">
      <span><b>Текущий IP: </b> <%= current_user.current_sign_in_ip %></span>
    </div>

    <div class="show-item">
      <span><b>Последний вход с IP:</b> <%= current_user.last_sign_in_ip %></span>
    </div>

    <div class="show-item">
      <span><b>Последний вход:</b> <%= time_format(current_user.last_sign_in_at) %></span>
    </div>

    <div class="show-item">
      <span><b>Дата создания:</b> <%= time_format(current_user.created_at) %></span>
    </div>

    <div class="show-item">
      <span><b>Дата обновления:</b> <%= time_format(current_user.updated_at) %></span>
    </div>

    <div class="show-actions">
      <%= link_to 'Редактировать', edit_user_registration_path(current_user) %>
    </div>
  </div>
</div>

