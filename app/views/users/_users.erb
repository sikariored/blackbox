<% users = User.all.order created_at: :desc %>

<div class="users-list-wrapper">
  <div class="users-list-title column-title">
    <div class="title-text">
      Пользователи [<%= User.count %>]
    </div>
    <div class="new-user-button">
      <%= link_to '+', new_user_registration_path, data: { turbo_frame: "user-new" }, class: "plus" %>
    </div>
  </div>
  <div class="users-list-container">
    <% users.each do |user| %>
      <div class="user-item">
        <%= turbo_frame_tag user do %>
          <div class="user-item-links">
            <%= link_to user.login, user_path(user), class: "user-login", data: { turbo_frame: "center-column" } %>
            <div class="user-item-actions">
              <%= link_to 'Инфо', user_path(user), class: "user-link", data: { turbo_frame: "center-column" } %>
              <%= link_to 'Изменить', edit_user_path(user), method: :get, class: "user-link", data: { turbo_frame: "right-column" } %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
