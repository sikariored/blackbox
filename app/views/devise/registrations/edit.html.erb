<% if current_user.can_edit_own_profile? %>
  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-edit blur-bg", style: "max-width: 1300px; border-radius: 10px; margin: 0 auto" }) do |f| %>
      <div style="text-align: center; font-size: 25px; font-weight: lighter">Редактирование профиля</div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-field">
        <%= f.label 'Email' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-field">
        <%= f.label t('activerecord.attributes.user.login') %>
        <%= f.text_field :login, required: true %>
      </div>
      <div class="form-field">
        <%= f.label t('activerecord.attributes.user.first_name') %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-field">
        <%= f.label t('activerecord.attributes.user.last_name') %>
        <%= f.text_field :last_name %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="edit-password-title">Сменить текущий пароль</div>

      <div class="form-field">
        <%= f.label 'Новый пароль' %><br/>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br/>
          <div class="badge"><%= @minimum_password_length %> символов минимум</div>
          <div class="badge">Не заполняйте, если не будете менять пароль</div>
        <% end %>
      </div>
      <div class="form-field">
        <%= f.label 'Подтверждение нового пароля' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="form-field">
        <%= f.label "Текущий пароль" %><br/>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <div class="badge">Заполните для подтверждения изменений</div>
      </div>
      <div class="form-actions">
        <%= f.submit "Сохранить изменения", class: "btn btn-lg" %>
      </div>
    <% end %>
    <!--<h3>Cancel my account</h3>-->
    <!--<div>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>-->
    <%#= link_to "Back", :back %></div>
<% else %>
  <p>У вас нет прав для редактирования своего профиля.</p>
<% end %>

