<%= turbo_frame_tag "user-new" do %>

  <div class="center-and-right-column column-title">
    Регистрация нового пользователя
    <button class="close-turbo-frame btn btn-danger" data-frame-id="user-new">X</button>
  </div>

  <div class="form-wrapper">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :login %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login" %>
      </div>

      <div class="form-field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-field">
        <%= f.label "Имя" %>
        <%= f.text_field :first_name %>
      </div>

      <div class="form-field">
        <%= f.label "Фамилия" %>
        <%= f.text_field :last_name %>
      </div>

      <div class="form-field">
        <%= f.label :role %>
        <%= f.collection_select :role_id, Role.all, :id, -> (role) { t("activerecord.attributes.role.key.#{role.key}") } %>
      </div>

      <div class="form-field">
        <%= f.label :department_id %>
        <%= f.collection_select :department_id, Department.all, :id, -> (department) { t("activerecord.attributes.department.name.#{department.name}") } %>
      </div>

      <div class="form-field">
        <%= f.label :password %>
        <%# if @minimum_password_length %>
        <!--          <em>(Минимум <%#= @minimum_password_length %> символов)</em>-->
        <%# end %>
        <%= f.password_field :password, autocomplete: "new-password", pattern: ".{6,}", title: "Пароль должен содержать не менее 6 символов" %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.button t('devise.registrations.sign_up_button'), class: "btn btn-primary btn-w-full btn-md" %>
      </div>


    <% end %>

    <%#= render "devise/shared/links" %>

  </div>
  <span class="line"></span>
<% end %>

