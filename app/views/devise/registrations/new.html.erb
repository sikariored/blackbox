<%= turbo_frame_tag "user-new" do %>

  <div class="column-title">Регистрация нового пользователя</div>

  <div class="form-wrapper">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :login %>
        <%= f.text_field :login, autofocus: true %>
      </div>

      <div class="form-field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-field">
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, Role.all, :id, :key %>
      </div>

      <div class="form-field">
        <%= f.label :department_id %>
        <%= f.collection_select :department_id, Department.all, :id, :name %>
      </div>

      <div class="form-field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(Минимум <%= @minimum_password_length %> символов)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Зарегистрировать" %>
      </div>

    <% end %>

    <%#= render "devise/shared/links" %>

  </div>
<% end %>

