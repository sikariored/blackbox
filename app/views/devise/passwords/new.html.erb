<div class="restore-password-form-wrapper form-wrapper">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-edit" }) do |f| %>

    <div style="text-align: center; font-size: 25px; font-weight: lighter">Восстановление пароля</div>

    <%= render "devise/shared/error_messages", resource: resource %>


    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Восстановить пароль", class: "btn btn-lg" %>
    </div>
  <% end %>

<!--  <div class="btn">-->
    <%#= render "devise/shared/links" %>
<!--  </div>-->

</div>
