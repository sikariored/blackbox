<div class="history-table-wrapper">

  <div class="filters">
    Форма для фильтров
  </div>


  <table class="history-table">
    <thead class="history-table-head">
    <tr>
      <th>Дата</th>
      <th>Исполнитель</th>
      <th>Action</th>
      <th>Цель</th>
      <th>Класс цели</th>
      <th>Версия</th>
      <th>Действия</th>
    </tr>
    </thead>
    <tbody class="history-table-body">

    <% @audits.each do |audit| %>
      <tr>
        <td><%= time_format(audit.created_at) %></td>
        <td>
          <% if audit.user.present? %>
            <%= audit.user.login %> :: <%= audit.user_id %>
          <% else %>
            system
          <% end %>
        </td>
        <td><%= audit.action %></td>
        <td><%= destination_user(audit) %></td>
        <td><%= audit.auditable_type %></td>
        <td><%= audit.version %></td>
        <td>
          <details>
            <summary>Раскрыть информацию</summary>
            <%= format_audit_changes(audit) %>
          </details>
        </td>
      </tr>
    <% end %>

    </tbody>

  </table>
</div>