<%= turbo_frame_tag "left-column" do %>
  <% roles = Role.all.order created_at: :desc %>
  <div class="list-wrapper">
    <div class="list-title column-title">
      <div class="title-text">
        Роли [<%= Role.count %>]
      </div>
      <div class="button_wrapper">
        <%= button_to '+', new_role_path, data: { turbo_frame: "role-new" }, class: "plus-button btn btn-primary", method: :get %>
      </div>
      <div class="menu-button-wrapper">
        <%= button_to 'Пользователи', users_path, data: { turbo_frame: "left-column"}, method: :get, class: "roles-button btn btn-primary" %>
      </div>
    </div>
    <div class="list-container">
      <% roles.each do |role| %>
        <div class="item">
          <%= turbo_frame_tag role do %>
            <div class="item-links">
              <%= link_to role.key, role_path(role), class: "item-name", data: { turbo_frame: "center-column" } %>
              <div class="item-actions">
                <%= link_to 'Инфо', role_path(role), class: "link", data: { turbo_frame: "center-column" } %>
                <%= link_to 'Изменить', edit_role_path(role), method: :get, class: "link", data: { turbo_frame: "right-column" } %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

